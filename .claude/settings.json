{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "ENABLE_TOOL_SEARCH": "auto:5"
  },
  "permissions": {
    "allow": [
      "Bash(uv run python -m pytest *)",
      "Bash(uv run python -m kuavi.*)",
      "Bash(uv sync *)",
      "Bash(uv pip install *)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git status *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(kuavi *)",
      "mcp__kuavi__kuavi_index_video",
      "mcp__kuavi__kuavi_search_video",
      "mcp__kuavi__kuavi_search_transcript",
      "mcp__kuavi__kuavi_get_transcript",
      "mcp__kuavi__kuavi_get_scene_list",
      "mcp__kuavi__kuavi_discriminative_vqa",
      "mcp__kuavi__kuavi_extract_frames",
      "mcp__kuavi__kuavi_zoom_frames",
      "mcp__kuavi__kuavi_get_index_info",
      "mcp__kuavi__kuavi_get_session_stats",
      "mcp__kuavi__kuavi_set_budget",
      "mcp__kuavi__kuavi_set_llm_config",
      "mcp__kuavi__kuavi_load_index",
      "mcp__kuavi__kuavi_eval",
      "mcp__kuavi__kuavi_analyze_shards",
      "mcp__kuavi__kuavi_anticipate_action",
      "mcp__kuavi__kuavi_predict_future",
      "mcp__kuavi__kuavi_verify_coherence",
      "mcp__kuavi__kuavi_classify_segment",
      "mcp__kuavi__kuavi_crop_frame",
      "mcp__kuavi__kuavi_diff_frames",
      "mcp__kuavi__kuavi_blend_frames",
      "mcp__kuavi__kuavi_threshold_frame",
      "mcp__kuavi__kuavi_frame_info",
      "mcp__kuavi__kuavi_index_corpus",
      "mcp__kuavi__kuavi_search_corpus",
      "mcp__kuavi__kuavi_corpus_stats",
      "mcp__kuavi__kuavi_orient",
      "mcp__kuavi__kuavi_search_all",
      "mcp__kuavi__kuavi_inspect_segment",
      "mcp__kuavi__kuavi_quick_answer"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Bash(git push --force *)",
      "Bash(rm -rf *)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/py_compile_check.sh"
          }
        ]
      },
      {
        "matcher": "mcp__kuavi__.*",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/hooks/kuavi_trace_logger.sh",
            "async": true
          }
        ]
      },
      {
        "matcher": "mcp__kuavi__kuavi_search_transcript",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/hooks/validate_transcript_claims.sh"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/session_start_reminder.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/notify.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/hooks/validate_analysis.sh"
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/hooks/validate_visual_confirmation.sh"
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/hooks/kuavi_trace_logger.sh",
            "async": true
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/hooks/kuavi_trace_logger.sh",
            "async": true
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/hooks/kuavi_trace_logger.sh",
            "async": true
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/hooks/kuavi_trace_logger.sh",
            "async": true
          }
        ]
      }
    ],
    "SessionEnd": []
  },
  "enabledPlugins": {
    "code-review@claude-plugins-official": true
  }
}
